<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/lighten"
    tools:context=".fragments.LightCalcFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="25dp"
        android:inputType="number"
        android:text="Lets help you calculate ,"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:text="the Watt,Shade,Angel and"
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:text="placment of your lamps."
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etLength"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:background="@drawable/btnwhite"
            android:hint="Room Length"
            android:inputType="number"
            android:padding="20dp"
            android:textColorHint="@color/purple_500"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etWidth"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:background="@drawable/btnwhite"
            android:hint="Room Width"
            android:inputType="number"
            android:padding="20dp"
            android:textColorHint="@color/purple_500"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

    <EditText
        android:id="@+id/getheight"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:background="@drawable/btnwhite"
        android:hint="Room Height"
        android:inputType="number"
        android:padding="20dp"
        android:textColorHint="@color/purple_500"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spRoomKind"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:background="@drawable/btnwhite"
        android:hint="Room Kind"
        android:padding="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <Button
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:background="@drawable/btnwhite"
            android:text="Check"
            android:textColor="@color/purple_700" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:background="@drawable/buttons"
            android:text="Calculate"
            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp">

        <TextView
            android:id="@+id/tvLedWatt"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:hint="Watt:"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvShade"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:hint="Shade:"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/tvLedWatt"/>

        <TextView
            android:id="@+id/tvAngle"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:hint="Angel:"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/tvShade"/>

        <TextView
            android:id="@+id/setheight"
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:layout_marginLeft="15dp"
            android:hint="Placement:"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/tvAngle"/>

    </RelativeLayout>

</LinearLayout>
