<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.LightCalcFragment">

    <TextView
        android:id="@+id/tv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:hint="calculate your Lamp"
        android:inputType="number"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etLength"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/input_design"
            android:hint="Room Length"
            android:inputType="number"
            android:padding="20dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/buttons"
            android:text="Check"
            android:textColor="@color/white" />

    </LinearLayout>

    <EditText
        android:id="@+id/etWidth"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input_design"
        android:hint="Room Width"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/getheight"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input_design"
        android:hint="Room Height"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spRoomKind"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:background="@drawable/input_design"
        android:hint="Room Kind" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Calculate"
        android:textColor="@color/white"
        android:background="@drawable/buttons" />

    <TextView
        android:id="@+id/tvLedWatt"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input_design"
        android:hint="Watt"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/setheight"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input_design"
        android:hint="placement"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvShade"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input_design"
        android:hint="Shade"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAngle"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/input_design"
        android:hint="Angle"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
