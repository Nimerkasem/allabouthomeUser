<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input_design"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/mycart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewProductImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_id"
            android:layout_toEndOf="@id/imageViewProductImage"
            android:textSize="16sp"
            android:textColor="@color/purple_700"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/textViewProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:layout_below="@id/textViewProductName"
            android:layout_toEndOf="@id/imageViewProductImage"
            android:layout_marginTop="8dp"
            android:textColor="@color/purple_700"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewProductImage"
            android:layout_below="@id/textViewProductPrice"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/purple_700"
            android:text="Quantity:" />

        <TextView
            android:id="@+id/textViewProductQuantity"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv"
            android:layout_below="@id/textViewProductPrice"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/purple_700"
            android:text="Quantity" />

        <Button
            android:id="@+id/increaseQuantityButton"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewProductQuantity"
            android:layout_marginTop="8dp"
            android:background="@drawable/btnwhite"
            android:textColor="@color/purple_700"
            android:layout_toEndOf="@id/imageViewProductImage"
            android:text="+" />

        <Button
            android:id="@+id/decreaseQuantityButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewProductQuantity"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/increaseQuantityButton"
            android:text="-"
            android:background="@drawable/btnwhite"/>

        <Button
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewProductPrice"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:background="@drawable/buttons"
            android:layout_toEndOf="@id/decreaseQuantityButton"
            android:text="Remove" />


        <Button
            android:id="@+id/add"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/buttons"
            android:text="add"
            android:textColor="@color/white"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
